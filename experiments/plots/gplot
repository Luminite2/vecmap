set pointsize 2
set style data lines
set style line 1 dt 1 lc rgb "#000000" lw 2 pt 2
set style line 2 dt 2 lc rgb "#4B0082" lw 2 pt 6
set style line 3 dt 5 lc rgb "#00008B" lw 2 pt 8
set output "1gram_dev.pdf"
set yrange [0:80]
set xlabel "Scaling Factor" font "Verdana,15"
set ylabel "Development Translation Accuracy (%)" font "Verdana,15"

plot "1gram.data" using 1:2 ls 1 w lp title 'English-German', \
"1gram.data" using 1:8 ls 2 w lp title 'English-Italian', \
"1gram.data" using 1:5 ls 3 w lp title 'English-Finnish'
